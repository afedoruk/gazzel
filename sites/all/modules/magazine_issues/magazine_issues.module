function magazine_issue_get_nid() {
  $nid=0;
  if(arg(0) == "node" && is_numeric(arg(1))) {
    $nid=arg(1);
  }
  elseif(arg(0) == "latest") {
    $nid=magazine_issues_get_latest_nid();
  }
  return $nid;
}